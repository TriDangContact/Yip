<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/linear_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/fm_post_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="post_1_username"/>

            <ImageView
                android:id="@+id/fm_post_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_options"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/fm_post_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_picture_size"
            android:layout_below="@+id/linear_post"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/fm_post_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_picture_size"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/linear_post"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/fm_post_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_below="@id/fm_post_image"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="post_1_caption"/>

        <TextView
            android:id="@+id/fm_post_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_below="@id/fm_post_caption"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorPrimaryDark"
            tools:text="post_1_hashtag" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
