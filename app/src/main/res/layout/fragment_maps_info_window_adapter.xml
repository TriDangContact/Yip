<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/maps_info_window_business_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_margin="7dp"
        android:layout_centerInParent="true"
        android:src="@drawable/profile_icon"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/maps_info_window_business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/maps_info_window_business_image"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="item_1_name" />



    <ImageView
        android:id="@+id/maps_info_window_business_rating"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/stars_small_5"
        android:layout_below="@+id/maps_info_window_business_name"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/maps_info_window_business_image"
        />

    <TextView
        android:id="@+id/maps_info_window_business_review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maps_info_window_business_rating"
        android:layout_toEndOf="@id/maps_info_window_business_image"
        android:textSize="12sp"
        tools:text="12345"
        />
    <TextView
        android:id="@+id/fm_business_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/maps_info_window_business_rating"
        android:layout_toEndOf="@id/maps_info_window_business_review_count"
        android:textSize="12sp"
        android:text="@string/search_item_review"
        />

        <TextView
            android:id="@+id/maps_info_window_business_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp"
            tools:text="item_1_category"
            android:layout_below="@+id/maps_info_window_business_review_count"
            android:layout_toEndOf="@id/maps_info_window_business_image"/>

        <TextView
            android:id="@+id/maps_info_window_business_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp"
            tools:text="item_1_address"
            android:layout_below="@+id/maps_info_window_business_category"
            android:layout_toEndOf="@id/maps_info_window_business_image"/>

</RelativeLayout>
